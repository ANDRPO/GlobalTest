<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8099CCFF"
    tools:context=".Person_list">


    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/mi_img_avatar"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity=""
        android:paddingVertical="10dp"
        tools:srcCompat="@tools:sample/avatars" />
    <TextView
        android:id="@+id/mi_tv_first_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="3dp"
        android:paddingTop="23dp"
        android:layout_toRightOf="@+id/mi_img_avatar"
        android:text="@string/first_name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/mi_tv_second_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mi_tv_first_name"
        android:layout_toRightOf="@+id/mi_img_avatar"
        android:paddingTop="5dp"
        android:paddingStart="3dp"
        android:text="@string/second_name"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/mi_tv_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="3dp"
        android:text="@string/last_name"
        android:layout_below="@+id/mi_tv_second_name"
        android:layout_toRightOf="@+id/mi_img_avatar"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/mi_tv_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mi_img_avatar"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:text="@string/city"
        android:textSize="18sp"
        android:textColor="@android:color/black" />
    <TextView
        android:id="@+id/mi_tv_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mi_tv_city"
        android:paddingTop="5dp"
        android:paddingStart="5dp"
        android:text="@string/age"
        android:textSize="18sp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/mi_tv_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mi_tv_age"
        android:text="Comments:"
        android:textSize="35dp"
        android:background="#99CCFF"
        android:gravity="center"
        android:textColor="@android:color/black"
        />

    <ListView
        android:id="@+id/listView_comments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mi_tv_comments"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="1" />
</RelativeLayout>