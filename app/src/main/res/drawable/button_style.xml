<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="6dp" />
            <stroke android:width="1dp" android:color="#242424" />
            <gradient android:angle="180" android:startColor="#CCCCCC" android:endColor="#CCCCCC" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="5dp" />
            <stroke android:width="3dip" android:color="#666666" />
            <gradient android:angle="180" android:startColor="#FFFFFF" android:endColor="#FFFFFF" />
        </shape>
    </item>
</selector>